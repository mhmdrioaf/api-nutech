generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model users {
  id Int @default(autoincrement()) @id
  email String @unique
  password String
  first_name String
  last_name String
  profile_image String?

  wallet users_wallet?
}

model banners {
  id Int @default(autoincrement()) @id
  banner_name String
  banner_image String
  description String
}

model services {
  id Int @default(autoincrement()) @id
  service_code String
  service_name String
  service_icon String
  service_tarif Decimal
}

model users_wallet {
  id Int @default(autoincrement()) @id
  balance Decimal

  owner users @relation(fields: [owner_id], references: [id])
  owner_id Int @unique

  transactions_history transaction_history[]
}

model transaction_history {
  id Int @default(autoincrement()) @id
  invoice_number String @unique
  transaction_type String
  description String
  total_amount Decimal
  created_on DateTime @default(now())

  wallet_id Int
  wallet users_wallet @relation(fields: [wallet_id], references: [id])
}